<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".App.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/toolbarStyle"
        android:title="@string/app_name"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:gravity="center"
                android:text="@string/selection_"
                android:textSize="20sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/color_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_01"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:max="@integer/rgb_max_value"/>

            <SeekBar
                android:id="@+id/color_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/color_red"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:max="@integer/rgb_max_value"/>

            <SeekBar
                android:id="@+id/color_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/color_green"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:max="@integer/rgb_max_value"/>

            <LinearLayout
                android:id="@+id/container_rgb_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/color_blue"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_r_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="R"
                    android:textColor="@color/red"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_g_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="G"
                    android:textColor="@color/green"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_b_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="B"
                    android:textColor="@color/blue"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/container_rgb_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_rgb_labels"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_r"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_g"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/green"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_b"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/blue"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/color_container_outer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_rgb_values"
                android:background="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:elevation="5dp">

                <RelativeLayout
                    android:id="@+id/color_container"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/black"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_marginLeft="3dp"
                        android:weightSum="2">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/load_color"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_folder_open"
                            android:background="?selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:layout_marginBottom="7dp"/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/save_color"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="?selectableItemBackgroundBorderless"
                            android:clickable="true"
                            app:srcCompat="@drawable/ic_save" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/rgb_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/abel"
                                android:text="RGB: 0, 0, 0"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/rgb_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_copy"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@id/rgb_display"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:layout_marginRight="3dp"
                                android:layout_alignBottom="@id/rgb_display"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/hex_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/abel"
                                android:text="HEX: #000000"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/hex_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_copy"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@id/hex_display"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:layout_marginRight="3dp"
                                android:layout_alignBottom="@id/hex_display"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/hsv_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/abel"
                                android:text="HSV: 0.00, 0.00, 0.00"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/hsv_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_copy"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@id/hsv_display"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:layout_marginRight="3dp"
                                android:layout_alignBottom="@id/hsv_display"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pick_color"
                android:layout_below="@+id/color_container_outer"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/pick_random_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pick_random_color"
                android:layout_below="@+id/pick"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/pick_from_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pick_color_from_image"
                android:layout_below="@+id/pick_random_color"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"/>

            <RelativeLayout
                android:id="@+id/seperator_01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/pick_from_image"/>

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seperator_01"
                android:fontFamily="@font/abel"
                android:gravity="center"
                android:text="@string/converting_"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/convert_container_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@+id/tv_02"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/convert_rgb_to_hex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rgb_to_hex"/>

                <Button
                    android:id="@+id/convert_hex_to_rgb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hex_to_rgb"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/convert_container_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/convert_container_01">

                <Button
                    android:id="@+id/convert_rgb_to_hsv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rgb_to_hsv"/>

                <Button
                    android:id="@+id/convert_hex_to_hsv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hex_to_hsv"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/convert_container_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/convert_container_02">

                <Button
                    android:id="@+id/convert_hsv_to_rgb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hsv_to_rgb"/>

                <Button
                    android:id="@+id/convert_hsv_to_hex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hsv_to_hex"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>