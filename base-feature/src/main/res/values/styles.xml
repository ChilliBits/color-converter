<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolbarStyle" parent="Theme.AppCompat">
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="showCaseView" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/colorPrimaryTransparent</item>
        <item name="sv_buttonText">@string/next</item>
        <item name="sv_titleTextAppearance">@style/showCaseView.text.title</item>
        <item name="sv_detailTextAppearance">@style/showCaseView.text</item>
    </style>

    <style name="showCaseView.text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="showCaseView.text.title" parent="showCaseView.text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>